<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorEBEBF1"
    android:orientation="vertical"
    tools:context="com.tangchaoke.yiyoubangjiao.activity.Activity_LoginPasswordModification">

    <include
        android:id="@+id/include_top"
        layout="@layout/include_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/include_top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y4">

            <EditText
                android:id="@+id/edit_old_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y25"
                android:layout_marginLeft="@dimen/x14"
                android:layout_marginRight="@dimen/x14"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:hint="输入验证码"
                android:inputType="number"
                android:padding="@dimen/y3"
                android:textColor="@color/color999999"
                android:textSize="@dimen/x12" />

            <TextView
                android:id="@+id/tv_code"
                android:layout_width="@dimen/x72"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/x14"
                android:background="@drawable/shape_light_blue_fillet_square"
                android:gravity="center"
                android:text="发送验证码"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/x12" />

        </LinearLayout>

        <EditText
            android:id="@+id/edit_new_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y25"
            android:layout_marginLeft="@dimen/x14"
            android:layout_marginRight="@dimen/x14"
            android:layout_marginTop="@dimen/y10"
            android:background="@color/colorPrimary"
            android:hint="输入新密码"
            android:inputType="textPassword"
            android:padding="@dimen/y3"
            android:textColor="@color/color999999"
            android:textSize="@dimen/x12" />

        <EditText
            android:id="@+id/edit_again_new_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y25"
            android:layout_marginLeft="@dimen/x14"
            android:layout_marginRight="@dimen/x14"
            android:layout_marginTop="@dimen/y10"
            android:background="@color/colorPrimary"
            android:hint="输入确认密码"
            android:inputType="textPassword"
            android:padding="@dimen/y3"
            android:textColor="@color/color999999"
            android:textSize="@dimen/x12" />

    </LinearLayout>

    <Button
        android:id="@+id/but_confirm_the_changes"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y38"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/y49"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:background="@drawable/select_blue_gradient_fillet_10"
        android:text="确认修改"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/x15" />

</RelativeLayout>
