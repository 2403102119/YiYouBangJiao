<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_registered_bg"
    android:orientation="vertical"
    tools:context="com.tangchaoke.yiyoubangjiao.activity.Activity_Registered">

    <include
        android:id="@+id/include_top"
        layout="@layout/include_top_individual" />

    <ImageView
        android:id="@+id/tv_registered_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/include_top"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y21"
        android:background="@drawable/ic_registered_py" />

    <FrameLayout
        android:id="@+id/fl_registered_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_registered_top"
        android:layout_marginTop="@dimen/y19">

        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x27"
            android:layout_marginRight="@dimen/x27"
            android:background="@null"
            android:hint="请输入手机号码"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:textSize="@dimen/x15" />

        <TextView
            android:id="@+id/tv_send_code"
            android:layout_width="@dimen/x72"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/x33"
            android:background="@drawable/shape_dark_blue_fillet_5"
            android:gravity="center"
            android:padding="@dimen/y3"
            android:text="发送验证码"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/x12" />

    </FrameLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/fl_registered_phone"
        android:layout_marginLeft="@dimen/x27"
        android:layout_marginRight="@dimen/x27"
        android:layout_marginTop="@dimen/y5"
        android:background="@color/colorPrimary" />

    <EditText
        android:id="@+id/edit_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_line"
        android:layout_marginLeft="@dimen/x27"
        android:layout_marginRight="@dimen/x27"
        android:layout_marginTop="@dimen/y15"
        android:background="@null"
        android:hint="请输入验证码"
        android:inputType="number"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textSize="@dimen/x15" />

    <View
        android:id="@+id/view_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/edit_code"
        android:layout_marginLeft="@dimen/x27"
        android:layout_marginRight="@dimen/x27"
        android:layout_marginTop="@dimen/y9"
        android:background="@color/colorPrimary" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/but_registered"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y29"
            android:layout_marginBottom="@dimen/y20"
            android:layout_marginLeft="@dimen/x27"
            android:layout_marginRight="@dimen/x27"
            android:background="@drawable/select_blue_gradient_fillet_10"
            android:text="下一步"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/x15" />

        <LinearLayout
            android:id="@+id/ll_registra_agreement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/but_registered"
            android:layout_marginBottom="@dimen/y10"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击注册即表示您同意"
                android:textColor="@color/colorDADADA"
                android:textSize="@dimen/x12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《隐私条例和服务条款》"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/x12" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
