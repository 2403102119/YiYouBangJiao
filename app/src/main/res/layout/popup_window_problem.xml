<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/toumingtuceng"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y32">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/x17"
            android:layout_height="@dimen/y12"
            android:layout_marginLeft="@dimen/x14"
            android:layout_marginTop="@dimen/x14"
            android:src="@drawable/ic_release_cancel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="问题详情"
            android:textColor="@color/color333333"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="@dimen/x17"
            android:layout_height="@dimen/y12"
            android:layout_marginRight="@dimen/x14"
            android:layout_marginTop="@dimen/x14"
            android:src="@drawable/ic_release_cancel"
            android:visibility="invisible" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_problem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y7"
        android:layout_marginLeft="@dimen/x18"
        android:layout_marginRight="@dimen/x18"
        android:layout_marginTop="@dimen/y13"
        android:textColor="@color/color333333"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/img_phono"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y125"
        android:layout_marginBottom="@dimen/y7"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:layout_marginTop="@dimen/y3"
        android:background="@drawable/ic_banner"
        android:scaleType="center" />

</LinearLayout>