<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_select_online_answer_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.tangchaoke.yiyoubangjiao.activity.Activity_InteractiveSolution">

    <include
        android:id="@+id/include_top"
        layout="@layout/include_top" />

    <ImageView
        android:id="@+id/img_select_answer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y91"
        android:layout_below="@id/include_top"
        android:layout_marginTop="@dimen/y5"
        android:background="@drawable/ic_select_answer" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y102"
        android:layout_below="@id/img_select_answer"
        android:layout_marginLeft="@dimen/x12"
        android:layout_marginRight="@dimen/x12"
        android:layout_marginTop="@dimen/y5"
        android:orientation="horizontal">

        <Button
            android:id="@+id/but_cultura_lessons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x5"
            android:layout_weight="1"
            android:background="@drawable/ic_cultura_lessons" />

        <Button
            android:id="@+id/but_chess_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x5"
            android:layout_weight="1"
            android:background="@drawable/ic_chess_class" />

    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/x116"
        android:layout_height="@dimen/y26"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/y7"
        android:background="@drawable/ic_select_bottom" />

</RelativeLayout>
