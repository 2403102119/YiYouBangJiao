<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorEBEBF1"
    tools:context="com.tangchaoke.yiyoubangjiao.activity.Activity_BuyOrder">

    <include
        android:id="@+id/include_top"
        layout="@layout/include_top" />

    <LinearLayout
        android:id="@+id/ll_buy_order_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y77"
        android:layout_below="@id/include_top"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付金额"
            android:textColor="@color/color333333"
            android:textSize="@dimen/x12" />

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y4"
            android:text="¥24.00"
            android:textColor="@color/colorde350e"
            android:textSize="@dimen/x25" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_buy_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_buy_order_top"
        android:padding="@dimen/y9"
        android:text="选择支付方式"
        android:textColor="@color/color999999"
        android:textSize="@dimen/x10" />

    <LinearLayout
        android:id="@+id/ll_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_buy_order"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y28"
            android:gravity="center_vertical"
            android:padding="@dimen/y7">

            <ImageView
                android:layout_width="@dimen/x18"
                android:layout_height="@dimen/y13"
                android:src="@drawable/ic_buy_zfb" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x7"
                android:layout_weight="1"
                android:text="支付宝支付"
                android:textColor="@color/color333333"
                android:textSize="@dimen/x12" />

            <CheckBox
                android:id="@+id/cb_zfb"
                android:layout_width="@dimen/x18"
                android:layout_height="@dimen/y13"
                android:layout_gravity="center_vertical"
                android:background="@drawable/select_cb"
                android:button="@null"
                android:checked="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y28"
            android:gravity="center_vertical"
            android:padding="@dimen/y7">

            <ImageView
                android:layout_width="@dimen/x18"
                android:layout_height="@dimen/y13"
                android:src="@drawable/ic_buy_wx" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x7"
                android:layout_weight="1"
                android:text="微信支付"
                android:textColor="@color/color333333"
                android:textSize="@dimen/x12" />

            <CheckBox
                android:id="@+id/cb_wx"
                android:layout_width="@dimen/x18"
                android:layout_height="@dimen/y13"
                android:layout_gravity="center_vertical"
                android:background="@drawable/select_cb"
                android:button="@null" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y28"
            android:gravity="center_vertical"
            android:padding="@dimen/y7">

            <ImageView
                android:layout_width="@dimen/x18"
                android:layout_height="@dimen/y13"
                android:src="@drawable/ic_buy_balance" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x7"
                android:layout_weight="1"
                android:text="余额支付"
                android:textColor="@color/color333333"
                android:textSize="@dimen/x12" />

            <CheckBox
                android:id="@+id/cb_balance"
                android:layout_width="@dimen/x18"
                android:layout_height="@dimen/y13"
                android:layout_gravity="center_vertical"
                android:background="@drawable/select_cb"
                android:button="@null" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/but_buy"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y38"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/y49"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:background="@drawable/select_blue_gradient_fillet_10"
        android:text="确认支付"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/x15" />

</RelativeLayout>
