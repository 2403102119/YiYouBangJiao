<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_onclick"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/y7"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="@dimen/y6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_orderNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="订单编号：185904871088"
            android:textColor="@color/color333333"
            android:textSize="@dimen/x14" />

        <TextView
            android:id="@+id/tv_orderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待支付"
            android:textColor="@color/color333333"
            android:textSize="@dimen/x14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y7"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_commodity_photo"
            android:layout_width="@dimen/x94"
            android:layout_height="@dimen/y66"
            android:background="@color/colorEBEBF1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_commodity_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y7"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="国际详细 木质 棋盘 旗子国际详细 木质 棋盘 旗子国际详细"
                android:textColor="@color/color333333"
                android:textSize="@dimen/x15" />

            <TextView
                android:id="@+id/tv_commodity_material"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y7"
                android:text="木质"
                android:textColor="@color/color999999"
                android:textSize="@dimen/x14" />

            <TextView
                android:id="@+id/tv_payType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y7"
                android:text="积分：4590"
                android:textColor="@color/colore21c5f"
                android:textSize="@dimen/x15" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/y4"
        android:background="@color/colorEBEBF1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y4">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="共1件商品"
            android:textColor="@color/color333333"
            android:textSize="@dimen/x14" />

        <Button
            android:id="@+id/but_order"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/y20"
            android:background="@drawable/select_blue_gradient_fillet_20"
            android:text="去支付"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/x14" />

    </LinearLayout>

</LinearLayout>