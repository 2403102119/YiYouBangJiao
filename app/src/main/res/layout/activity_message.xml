<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorEBEBF1"
    tools:context="com.tangchaoke.yiyoubangjiao.activity.Activity_Message">

    <include
        android:id="@+id/include_top"
        layout="@layout/include_top" />

    <LinearLayout
        android:id="@+id/ll_message_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/include_top"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:padding="@dimen/y4">

        <ImageView
            android:layout_width="@dimen/x45"
            android:layout_height="@dimen/y32"
            android:src="@drawable/ic_all_message" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x18"
            android:text="系统消息"
            android:textColor="@color/color333333"
            android:textSize="@dimen/x18" />

    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ll_message_top"
        android:background="@color/colorEBEBF1" />

    <com.tangchaoke.yiyoubangjiao.view.PullToRefreshLayout
        android:id="@+id/pull_to_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view_line">

        <include layout="@layout/pullto_refresh_head" />

        <com.tangchaoke.yiyoubangjiao.view.ObservableScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:id="@+id/container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:id="@+id/ll_no_message"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/y10"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/y50"
                            android:background="@drawable/ic_null" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/y10"
                            android:text="未探测到相关数据"
                            android:textColor="@color/color999999"
                            android:textSize="@dimen/x15" />

                    </LinearLayout>


                </RelativeLayout>

            </LinearLayout>

        </com.tangchaoke.yiyoubangjiao.view.ObservableScrollView>

        <include
            layout="@layout/pullto_load_more"
            android:visibility="gone" />

    </com.tangchaoke.yiyoubangjiao.view.PullToRefreshLayout>

</RelativeLayout>
