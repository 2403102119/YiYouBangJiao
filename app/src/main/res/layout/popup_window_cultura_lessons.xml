<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#36000000"
    android:gravity="center">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginTop="@dimen/x4"
            android:background="@drawable/shape_white_fillet_5"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/y29"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:text="提示"
                android:textColor="@color/color666666"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x27"
                android:layout_marginRight="@dimen/x27"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:text="已绑定学校，请返回首页到“我的学校”页面进行提问"
                android:textColor="@color/color666666"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/y15"
                android:layout_marginTop="@dimen/y10"
                android:background="@drawable/ic_my_school"
                android:gravity="center_horizontal" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_cancel_cultura_lessons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/x25"
            android:background="@drawable/ic_cancel_cultura_lessons" />

    </FrameLayout>

</LinearLayout>