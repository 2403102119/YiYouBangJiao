<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_top_activity"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y49"
        android:background="@drawable/ic_top_activity"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y34"
            android:layout_marginTop="@dimen/y15"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/ll_back"
                android:layout_width="@dimen/x44"
                android:layout_height="@dimen/y18"
                android:layout_marginLeft="@dimen/x14"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/x14"
                    android:layout_height="@dimen/y10"
                    android:src="@drawable/ic_back" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_top_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="标题"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/x18" />

            <LinearLayout
                android:id="@+id/ll_adoption"
                android:layout_width="@dimen/x49"
                android:layout_height="@dimen/y16"
                android:layout_marginRight="@dimen/x14"
                android:background="@drawable/shape_light_blue_fillet_square"
                android:gravity="center"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/tv_tight_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="采纳"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/x15" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_top_right_release"
                android:layout_width="@dimen/x49"
                android:layout_height="@dimen/y16"
                android:layout_marginRight="@dimen/x14"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_top_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布"
                    android:textColor="@color/color266B85"
                    android:textSize="@dimen/x15" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_top_right"
                android:layout_width="@dimen/x49"
                android:layout_height="@dimen/y16"
                android:layout_marginRight="@dimen/x14"
                android:background="@drawable/shape_white_fillet_20"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/x11"
                    android:layout_height="@dimen/y8"
                    android:src="@drawable/ic_jia" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提问"
                    android:textColor="@color/color4d71a6"
                    android:textSize="@dimen/x14" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_logo"
                android:layout_width="@dimen/x49"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/x14"
                android:gravity="center"
                android:visibility="gone">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_logo"
                    android:layout_width="@dimen/x45"
                    android:layout_height="@dimen/y32"
                    app:civ_border_color="@color/colorF5F9FA"
                    android:background="@drawable/shape_gray_circle"
                    app:civ_border_width="2dp" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorEBEBF1" />

    </LinearLayout>

</LinearLayout>