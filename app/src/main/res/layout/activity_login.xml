<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background_picture"
    android:orientation="vertical"
    tools:context="com.tangchaoke.yiyoubangjiao.activity.Activity_Login">

    <include
        android:id="@+id/include_top"
        layout="@layout/include_top_individual" />

    <TextView
        android:id="@+id/tv_login_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/include_top"
        android:layout_marginTop="@dimen/y32"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/x24" />

    <EditText
        android:id="@+id/edit_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_login_top"
        android:layout_marginLeft="@dimen/x27"
        android:layout_marginRight="@dimen/x27"
        android:layout_marginTop="@dimen/y36"
        android:background="@null"
        android:hint="请输入手机号码"
        android:inputType="number"
        android:maxLength="11"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textSize="@dimen/x13" />

    <View
        android:id="@+id/view_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/edit_phone"
        android:layout_marginLeft="@dimen/x27"
        android:layout_marginRight="@dimen/x27"
        android:layout_marginTop="@dimen/y10"
        android:background="@color/colorPrimary" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_line1"
        android:layout_marginLeft="@dimen/x27"
        android:layout_marginRight="@dimen/x27"
        android:layout_marginTop="@dimen/y16"
        android:background="@null"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textSize="@dimen/x13" />

    <View
        android:id="@+id/view_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/edit_password"
        android:layout_marginLeft="@dimen/x27"
        android:layout_marginRight="@dimen/x27"
        android:layout_marginTop="@dimen/y10"
        android:background="@color/colorPrimary" />

    <Button
        android:id="@+id/but_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y29"
        android:layout_below="@id/view_line2"
        android:layout_marginLeft="@dimen/x27"
        android:layout_marginRight="@dimen/x27"
        android:layout_marginTop="@dimen/y16"
        android:background="@drawable/select_blue_gradient_fillet_10"
        android:text="登 录"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/x15" />

    <LinearLayout
        android:id="@+id/ll_login_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/but_login"
        android:layout_marginLeft="@dimen/x27"
        android:layout_marginRight="@dimen/x27"
        android:layout_marginTop="@dimen/y6"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_login_registered"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="立即注册"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/x13" />

        <TextView
            android:id="@+id/tv_login_recover_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="找回密码"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/x13" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_login_content"
        android:layout_marginLeft="@dimen/x27"
        android:layout_marginRight="@dimen/x27"
        android:layout_marginTop="@dimen/y13"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他登录方式"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/x13" />

        <ImageView
            android:id="@+id/img_wx"
            android:layout_width="@dimen/x45"
            android:layout_height="@dimen/y32"
            android:layout_marginTop="@dimen/y3"
            android:background="@drawable/ic_wx_login" />

    </LinearLayout>

</RelativeLayout>
