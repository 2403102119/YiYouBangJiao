<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y44"
        android:background="@drawable/ic_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y34"
            android:layout_marginTop="@dimen/y15"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/x51"
                android:layout_height="@dimen/y15"
                android:layout_marginLeft="@dimen/x14"
                android:src="@drawable/ic_yi" />

            <LinearLayout
                android:id="@+id/ll_top_search"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y17"
                android:layout_marginLeft="@dimen/x9"
                android:layout_marginRight="@dimen/x13"
                android:layout_weight="1"
                android:background="@drawable/shape_light_white_fillet20_line"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/x11"
                    android:layout_height="@dimen/y8"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_search" />

                <EditText
                    android:id="@+id/edit_search"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="请输入关键字进行搜索"
                    android:textColor="@color/color666666"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_top_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="消息"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:visibility="gone" />

            <FrameLayout
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginRight="15dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/img_message"
                    android:layout_width="22dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_message_top" />

                <ImageView
                    android:id="@+id/img_message_identification"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_gravity="right"
                    android:src="@drawable/shape_red_circle"
                    android:visibility="gone" />

            </FrameLayout>

            <LinearLayout
                android:id="@+id/ll_top_right_share"
                android:layout_width="@dimen/x49"
                android:layout_height="@dimen/y16"
                android:layout_marginRight="@dimen/x14"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/img_share"
                    android:layout_width="@dimen/x18"
                    android:layout_height="@dimen/y13"
                    android:src="@drawable/ic_top_share" />

                <ImageView
                    android:id="@+id/img_message_top"
                    android:layout_width="@dimen/x18"
                    android:layout_height="@dimen/y13"
                    android:layout_marginLeft="@dimen/x12"
                    android:src="@drawable/ic_top_message" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_top_right"
                android:layout_width="@dimen/x49"
                android:layout_height="@dimen/y16"
                android:layout_marginRight="@dimen/x14"
                android:background="@drawable/shape_white_fillet_20"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/x11"
                    android:layout_height="@dimen/y8"
                    android:src="@drawable/ic_jia" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提问"
                    android:textColor="@color/color4d71a6"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_top_right_nearby"
                android:layout_width="@dimen/x49"
                android:layout_height="@dimen/y16"
                android:layout_marginRight="@dimen/x14"
                android:background="@drawable/shape_white_fillet_20"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/x11"
                    android:layout_height="@dimen/y8"
                    android:src="@drawable/ic_positioning" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="附近"
                    android:textColor="@color/color4d71a6"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>