<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_club_map_info"
    android:layout_width="@dimen/x169"
    android:layout_height="@dimen/y77">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_club_map"
            android:layout_width="@dimen/x162"
            android:layout_height="@dimen/y59"
            android:layout_marginTop="@dimen/y3"
            android:background="@drawable/ic_banner" />

        <TextView
            android:id="@+id/tv_club_map"
            android:layout_width="@dimen/x169"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_club_map"
            android:layout_marginBottom="@dimen/y3"
            android:layout_marginTop="@dimen/y3"
            android:gravity="center"
            android:text="唐朝客棋类机构"
            android:textColor="@color/color333333"
            android:textSize="9sp" />

    </LinearLayout>

</RelativeLayout>