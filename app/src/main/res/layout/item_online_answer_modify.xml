<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_onclick"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/select_white_square"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y7"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_head"
                    android:layout_width="@dimen/x33"
                    android:layout_height="@dimen/y23"
                    android:layout_marginLeft="@dimen/x14"
                    android:background="@drawable/ic_user" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x9"
                            android:text="同学"
                            android:textColor="@color/color333333"
                            android:textSize="@dimen/x12" />

                        <LinearLayout
                            android:layout_width="@dimen/x46"
                            android:layout_height="@dimen/y10"
                            android:layout_marginLeft="@dimen/x14"
                            android:background="@drawable/shape_light_blue_fillet_square"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_grade"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="象棋"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/x10" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_subject"
                            android:layout_width="@dimen/x46"
                            android:layout_height="@dimen/y10"
                            android:layout_marginLeft="@dimen/x4"
                            android:background="@drawable/shape_light_blue_fillet_square"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_subject"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="科目"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/x10" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_submission_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x9"
                            android:layout_marginRight="@dimen/x18"
                            android:text="2018-03-02 20:15"
                            android:textColor="@color/color999999"
                            android:textSize="@dimen/x10" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/x14"
                    android:gravity="right"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_delete"
                        android:layout_width="@dimen/x45"
                        android:layout_height="@dimen/y16"
                        android:background="@drawable/shape_red_fillet_5"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="删除"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/x10" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_bounty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥ 0"
                        android:textColor="@color/colorFF3A3A"
                        android:textSize="@dimen/x10" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_bounty_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x14"
                android:layout_marginTop="@dimen/y3"
                android:text="￥ 0"
                android:textColor="@color/colorFF3A3A"
                android:textSize="@dimen/x10"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x14"
                android:layout_marginTop="@dimen/y7"
                android:layout_weight="1"
                android:text="问题标题"
                android:textColor="@color/color333333"
                android:textSize="@dimen/x12"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/y7"
                android:layout_marginLeft="@dimen/x14"
                android:layout_marginRight="@dimen/x23"
                android:layout_marginTop="@dimen/y7"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.5"
                android:maxLines="2"
                android:text="问题题目"
                android:textColor="@color/color333333"
                android:textSize="@dimen/x10"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_question_figure"
                android:layout_width="@dimen/x116"
                android:layout_height="@dimen/y50"
                android:layout_marginBottom="@dimen/y7"
                android:layout_marginLeft="@dimen/x14"
                android:layout_marginTop="@dimen/y3"
                android:background="@color/colorEBEBF1"
                android:scaleType="center" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_solved"
            android:layout_width="@dimen/x89"
            android:layout_height="@dimen/y50"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/x14"
            android:layout_marginTop="@dimen/y13"
            android:src="@drawable/yijiejue"
            android:visibility="invisible" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/colorEBEBF1" />

</LinearLayout>