<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorEBEBF1"
    android:orientation="vertical"
    tools:context="com.tangchaoke.yiyoubangjiao.activity.Activity_CustodyBounty">

    <include
        android:id="@+id/include_top"
        layout="@layout/include_top" />

    <LinearLayout
        android:id="@+id/ll_custody_bounty_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/include_top"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x49"
            android:layout_marginTop="@dimen/y12"
            android:text="本次提问需支付0.0元答题金额"
            android:textColor="@color/color333333"
            android:textSize="@dimen/x14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y12"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x49"
                android:text="¥"
                android:textColor="@color/color333333"
                android:textSize="@dimen/x18" />

            <TextView
                android:id="@+id/edit_price"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y22"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x54"
                android:background="@color/colorF6F9FA"
                android:padding="@dimen/y4"
                android:text="0.0"
                android:textColor="@color/color333333"
                android:textSize="@dimen/x15" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y20"
            android:layout_marginLeft="@dimen/x68"
            android:layout_marginTop="@dimen/x4"
            android:text="暂时交由平台托管，采纳后转到答题者账户"
            android:textColor="@color/color999999"
            android:textSize="@dimen/x10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_custody_bounty_top"
        android:layout_marginBottom="@dimen/y20"
        android:layout_marginTop="@dimen/y4"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/y13">

        <LinearLayout
            android:id="@+id/ll_wx"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/x37"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_wx"
                android:layout_width="@dimen/x32"
                android:layout_height="@dimen/y23"
                android:background="@drawable/ic_wechat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y4"
                android:text="微信"
                android:textColor="@color/color333333"
                android:textSize="@dimen/x10" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_zfb"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x37"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_zfb"
                android:layout_width="@dimen/x32"
                android:layout_height="@dimen/y23"
                android:background="@drawable/ic_unalipay" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y4"
                android:text="支付宝"
                android:textColor="@color/color333333"
                android:textSize="@dimen/x10" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/but_confirm_play"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y38"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/y49"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:background="@drawable/select_blue_gradient_fillet_10"
        android:text="确认支付"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/x15" />

</RelativeLayout>
