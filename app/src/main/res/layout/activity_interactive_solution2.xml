<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_online_answer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorEBEBF1"
    android:orientation="vertical"
    tools:context="com.tangchaoke.yiyoubangjiao.activity.Activity_InteractiveSolution2">

    <include layout="@layout/include_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y25"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/ll_chess"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_chess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x5"
                android:text="棋类"
                android:textColor="@color/color999999"
                android:textSize="@dimen/x13" />

            <ImageView
                android:id="@+id/img_chess"
                android:layout_width="@dimen/x5"
                android:layout_height="@dimen/y3"
                android:src="@drawable/ic_clup_arrow" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_find_tearch_grade"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_find_tearch_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x5"
                android:text="年级"
                android:textColor="@color/color999999"
                android:textSize="@dimen/x13" />

            <ImageView
                android:id="@+id/img_find_tearch_grade"
                android:layout_width="@dimen/x5"
                android:layout_height="@dimen/y3"
                android:src="@drawable/ic_clup_arrow" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_find_tearch_subject"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_find_tearch_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x5"
                android:text="科目"
                android:textColor="@color/color999999"
                android:textSize="@dimen/x13" />

            <ImageView
                android:id="@+id/img_find_tearch_subject"
                android:layout_width="@dimen/x5"
                android:layout_height="@dimen/y3"
                android:src="@drawable/ic_clup_arrow" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/view_find_teacher_pop"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorEBEBF1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/include_pull_recycler" />

    </LinearLayout>

</LinearLayout>
