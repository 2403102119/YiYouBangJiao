<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_onclick"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="horizontal"
    android:padding="@dimen/y6">

    <com.tangchaoke.yiyoubangjiao.view.RoundImageView
        android:id="@+id/img_teacher_head"
        android:layout_width="@dimen/x58"
        android:layout_height="@dimen/y47"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/x14"
        android:layout_marginRight="@dimen/x14"
        android:background="@drawable/ic_teacher_user" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_teacher_nick_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="9dp"
                android:layout_weight="1"
                android:text="老师"
                android:textColor="@color/color333333"
                android:textSize="@dimen/x12" />

            <LinearLayout
                android:id="@+id/ll_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="￥"
                    android:textColor="@color/colorFF2626"
                    android:textSize="@dimen/x11" />

                <TextView
                    android:id="@+id/tv_start_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="150"
                    android:textColor="@color/colorFF2626"
                    android:textSize="@dimen/x15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:gravity="right"
                    android:text="起"
                    android:textColor="@color/colorFF2626"
                    android:textSize="@dimen/x11" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_city_type_sex_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y6"
            android:text="天津 | 围棋 | 男 | 35"
            android:textColor="@color/color999999"
            android:textSize="@dimen/x13" />

        <TextView
            android:id="@+id/tv_type_chess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y1"
            android:text="国际象棋 | 国际跳棋 | 围棋 | 象棋 | 五子棋"
            android:textColor="@color/color999999"
            android:textSize="@dimen/x10"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/y3">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_coach_advantage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>