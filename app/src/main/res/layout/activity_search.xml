<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorEBEBF1"
    tools:context="com.tangchaoke.yiyoubangjiao.activity.Activity_Search">

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/select_blue_gradient">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y32"
            android:layout_marginTop="@dimen/y14"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/ll_top_search"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y16"
                android:layout_marginLeft="@dimen/x9"
                android:layout_marginRight="@dimen/x13"
                android:layout_weight="1"
                android:background="@drawable/shape_white_fillet_20"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/x11"
                    android:layout_height="@dimen/y8"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_search" />

                <EditText
                    android:id="@+id/edit_search"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="请输入关键字进行搜索"
                    android:textColor="@color/color666666"
                    android:textSize="@dimen/x14" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_top_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x13"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/x16" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_top"
        android:padding="@dimen/y6">

        <TextView
            android:id="@+id/tv_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="历史搜索"
            android:textColor="@color/color333333"
            android:textSize="@dimen/x12" />

        <ImageView
            android:id="@+id/img_search_delete"
            android:layout_width="@dimen/x16"
            android:layout_height="@dimen/y11"
            android:src="@drawable/ic_search_delete" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_history"
        android:padding="@dimen/y6"></android.support.v7.widget.RecyclerView>

    <com.tangchaoke.yiyoubangjiao.view.MyListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recycler_history"
        android:divider="@null"></com.tangchaoke.yiyoubangjiao.view.MyListView>

</RelativeLayout>
