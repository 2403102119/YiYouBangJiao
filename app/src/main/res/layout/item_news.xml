<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_onclick"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/y5"
    android:layout_marginTop="@dimen/y5"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_path"
        android:layout_width="@dimen/x67"
        android:layout_height="@dimen/y47"
        android:background="@color/colorEBEBF1"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x7"
        android:layout_marginTop="@dimen/y2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="新闻标题"
            android:textColor="@color/color000000"
            android:textSize="@dimen/x18" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y4"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="内容内容内容内容内容内容内容内容内内容内容内容内容内容内容"
            android:textColor="@color/color7f7f7f"
            android:textSize="@dimen/x15" />

    </LinearLayout>

</LinearLayout>