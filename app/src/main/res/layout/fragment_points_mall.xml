<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorEBEBF1"
    tools:context="com.tangchaoke.yiyoubangjiao.fragment.Fragment_Club">

    <include
        android:id="@+id/include_top"
        layout="@layout/top_search" />

    <LinearLayout
        android:id="@+id/ll_top_select"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y25"
        android:layout_below="@id/include_top"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_comprehensive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_comprehensive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="综合"
                android:textColor="@color/color7f7f7f"
                android:textSize="@dimen/x13" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sales_volume"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_sales_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="销量"
                android:textColor="@color/color7f7f7f"
                android:textSize="@dimen/x13" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格"
                android:textColor="@color/color7f7f7f"
                android:textSize="@dimen/x13" />

            <ImageView
                android:id="@+id/img_price"
                android:layout_width="@dimen/x10"
                android:layout_height="@dimen/y10"
                android:background="@drawable/ic_price"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_layout_switch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_layout_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_points_mall_list" />

        </LinearLayout>

    </LinearLayout>

    <com.tangchaoke.yiyoubangjiao.view.PullToRefreshLayout
        android:id="@+id/pull_to_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_top_select">

        <include layout="@layout/pullto_refresh_head" />

        <com.tangchaoke.yiyoubangjiao.view.ObservableScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_points_mall"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/y6"
                    android:background="@color/colorPrimary"></android.support.v7.widget.RecyclerView>

                <LinearLayout
                    android:id="@+id/ll_no_problem"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/y13"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y13"
                        android:background="@drawable/ic_null" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y13"
                        android:text="未探测到相关数据"
                        android:textColor="@color/color999999"
                        android:textSize="@dimen/x15" />

                </LinearLayout>

            </RelativeLayout>

        </com.tangchaoke.yiyoubangjiao.view.ObservableScrollView>

        <include layout="@layout/pullto_load_more" />

    </com.tangchaoke.yiyoubangjiao.view.PullToRefreshLayout>

</RelativeLayout>
