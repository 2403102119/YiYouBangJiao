<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorEBEBF1"
    android:orientation="vertical"
    tools:context="com.tangchaoke.yiyoubangjiao.activity.Activity_CertifiedAgreement">

    <include
        android:id="@+id/include_top"
        layout="@layout/include_top" />

    <WebView
        android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/include_top"
        android:layout_weight="1"></WebView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorEBEBF1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y32"
        android:layout_below="@id/web_view"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <CheckBox
                android:id="@+id/cb_agreement"
                android:layout_width="@dimen/x18"
                android:layout_height="@dimen/y13"
                android:layout_gravity="center_vertical"
                android:background="@drawable/select_cb"
                android:button="@null"
                android:checked="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x4"
                android:text="我已阅读并同意以上协议"
                android:textSize="@dimen/x13" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_next_step"
            android:layout_width="@dimen/x134"
            android:layout_height="match_parent"
            android:background="@drawable/select_blue_gradient"
            android:gravity="center"
            android:text="下一步"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/x15" />

    </LinearLayout>

</LinearLayout>
